{
    "main": "./lib/src/index.js",
    "scripts": {
        "build": "yarn tsc --build",
        "start": "node ./lib/src/index.js",
        "start:dev": "ts-node-dev --inspect=0.0.0.0:9240 --respawn --transpile-only ./src/index.ts",
        "docker:build": "docker-compose -f docker-compose.yml up --build",
        "docker:start": "yarn docker:down && yarn docker:up",
        "docker:up": "docker-compose -f docker-compose.yml up",
        "docker:down": "docker-compose -f docker-compose.yml down",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "f() { npx typeorm-ts-node-commonjs migration:generate -p -d src/config/database.ts src/migrations/$@; }; f",
        "migration:run": "node scripts/setup-database.js && npx typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
        "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/config/database.ts"
    },
    "dependencies": {
        "axios": "^1.12.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "node-cache": "^5.1.2",
        "node-cron": "^4.2.1",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "stripe": "^17.7.0",
        "typeorm": "^0.3.27",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/node": "^24.6.0",
        "@types/node-cache": "^4.2.5",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "shx": "^0.4.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2"
    },
    "name": "kodus-service-billing",
    "version": "1.0.0",
    "author": "malinosqui <gabrielmalinosqui@gmail.com>",
    "license": "MIT"
}